{
  "name": "jsdk",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "",
  "scripts": {
    "git-mdl": "git submodule update --init --recursive --remote",
    "ldep:upload-client": "mkdir -p web_modules && curl https://unpkg.com/@uploadcare/upload-client@2.0.0/dist/index.browser.js --output web_modules/upload-client.js",
    "setup": "npm run git-mdl && npm run ldep:upload-client && npm i && npm run build-libs",
    "test": "test",
    "build-libs": "node ./build-libs.js",
    "deploy": "npm run build-libs"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "esbuild": "^0.12.16",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "0.0.17",
    "rimraf": "^2.6.3",
    "typescript": "^3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "off",
      "max-classes-per-file": "off",
      "prefer-const": "off",
      "no-param-reassign": "off",
      "guard-for-in": "off",
      "no-restricted-syntax": "off",
      "class-methods-use-this": "off",
      "dot-notation": "off",
      "no-plusplus": "off",
      "no-return-await": "off",
      "no-await-in-loop": "off",
      "one-var": "off",
      "default-case": "warn",
      "no-shadow": "warn",
      "no-prototype-builtins": "off",
      "prefer-template": "off",
      "lit/no-invalid-html": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "printWidth": 120,
    "parser": "jsdoc-parser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "tsc --skipLibCheck --allowJs --noEmit",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Uploadcare Inc.",
  "license": "MIT"
}
