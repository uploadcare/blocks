{
  "name": "jsdk",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dir": "mkdir -p ext_modules",
    "ext:upload-client": "curl -L https://unpkg.com/@uploadcare/upload-client@^2.0.0/dist/index.browser.js --output ext_modules/upload-client.js",
    "ext:symbiote": "curl -L https://unpkg.com/@symbiotejs/symbiote@latest/build/symbiote.jsdoc.js --output ext_modules/symbiote.js",
    "ext:re-serve": "curl https://raw.githubusercontent.com/re4ma/re-serve/main/server/re-server.js --output ext_modules/re-server.js",
    "setup": "npm run dir && npm run ext:symbiote && npm run ext:upload-client && npm run ext:re-serve && npm i && npm run build-libs",
    "test": "test",
    "dev": "node ext_modules/re-server.js",
    "build-libs": "node ./build-libs.js && rollup --config rollup.config.js",
    "pub": "lerna publish",
    "release": "shipjs prepare"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "esbuild": "^0.12.16",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "0.0.17",
    "rollup": "^2.62.0",
    "shipjs": "0.24.1",
    "typescript": "^3.9.7"
  },
  "eslintIgnore": [
    "ext_modules",
    "build",
    "upload-blocks/test/react-example",
    "html_output"
  ],
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "off",
      "max-classes-per-file": "off",
      "prefer-const": "off",
      "no-param-reassign": "off",
      "guard-for-in": "off",
      "no-restricted-syntax": "off",
      "class-methods-use-this": "off",
      "dot-notation": "off",
      "no-plusplus": "off",
      "no-return-await": "off",
      "no-await-in-loop": "off",
      "one-var": "off",
      "default-case": "warn",
      "no-shadow": "warn",
      "no-prototype-builtins": "off",
      "prefer-template": "off",
      "lit/no-invalid-html": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "printWidth": 120,
    "parser": "jsdoc-parser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "tsc --skipLibCheck --allowJs --noEmit",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Uploadcare Inc.",
  "license": "MIT"
}
