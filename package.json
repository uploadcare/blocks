{
  "name": "jsdk",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "setup": "npm i && lerna bootstrap && npm run build-libs",
    "test": "test",
    "types": "dts-bundle-generator --config ./dts.cfg.json",
    "build-libs": "lerna run build && npm run types",
    "dts-native": "tsc -p ./dts-native.cfg.json",
    "pub": "lerna publish",
    "release": "shipjs prepare",
    "dev": "wds"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "@types/node": "^17.0.14",
    "@web/dev-server": "^0.1.30",
    "dts-bundle-generator": "^6.5.0",
    "esbuild": "^0.14.21",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.3.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "0.0.17",
    "shipjs": "^0.24.2",
    "typescript": "^4.5.5"
  },
  "eslintIgnore": [
    "ext_modules",
    "build",
    "upload-blocks/test/react-example",
    "html_output"
  ],
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "off",
      "max-classes-per-file": "off",
      "prefer-const": "off",
      "no-param-reassign": "off",
      "guard-for-in": "off",
      "no-restricted-syntax": "off",
      "class-methods-use-this": "off",
      "dot-notation": "off",
      "no-plusplus": "off",
      "no-return-await": "off",
      "no-await-in-loop": "off",
      "one-var": "off",
      "default-case": "warn",
      "no-shadow": "warn",
      "no-prototype-builtins": "off",
      "prefer-template": "off",
      "lit/no-invalid-html": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "printWidth": 120,
    "parser": "jsdoc-parser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "tsc --skipLibCheck --allowJs --noEmit",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Uploadcare Inc.",
  "license": "MIT"
}
