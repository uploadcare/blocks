{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2017", "ESNext", "ESNext.Array", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "chai", "mocha"],
    "noEmit": true
  },
  "include": ["**/*.js", "types"],
  "exclude": ["node_modules"]
}
